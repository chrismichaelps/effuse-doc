{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@effuse/core",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@effuse/core": ["../packages/core/src/index.ts"],
			"@effuse/core/*": ["../packages/core/src/*"],
			"@effuse/router": ["../packages/router/src/index.ts"],
			"@effuse/store": ["../packages/store/src/index.ts"],
			"@effuse/query": ["../packages/query/src/index.ts"],
			"@effuse/ink": ["../packages/ink/src/index.ts"],
			"@effuse/i18n": ["../packages/i18n/src/index.ts"],
			"@effuse/compiler": ["../packages/compiler/src/index.ts"],
			"@effuse/compiler/*": ["../packages/compiler/src/*"]
		}
	},
	"include": ["src", "src/types"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
